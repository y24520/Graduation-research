DB_SQL
tennis_db
CREATE TABLE games (
    id INT AUTO_INCREMENT PRIMARY KEY,
    team_a VARCHAR(255),
    team_b VARCHAR(255),
    games_a INT,
    games_b INT,
    match_date DATETIME DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE actions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    game_id INT,
    player_name VARCHAR(255),
    action_type VARCHAR(255),
    score_a INT,
    score_b INT,
    FOREIGN KEY (game_id) REFERENCES games(id)
);


/* gamesテーブルのカラム追加 */
ALTER TABLE games ADD COLUMN player_a1 VARCHAR(255) AFTER games_b;
ALTER TABLE games ADD COLUMN player_a2 VARCHAR(255) AFTER player_a1;
ALTER TABLE games ADD COLUMN player_b1 VARCHAR(255) AFTER player_a2;
ALTER TABLE games ADD COLUMN player_b2 VARCHAR(255) AFTER player_b1;

